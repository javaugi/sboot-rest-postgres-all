{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["firstName", "lastName", "dateOfBirth"],
    "properties": {
        "firstName": {
            "type": "string",
            "minLength": 2,
            "maxLength": 50
        },
        "lastName": {
            "type": "string",
            "minLength": 2,
            "maxLength": 50
        },
        "dateOfBirth": {
            "type": "string",
            "format": "date"
        },
        "phoneNumber": {
            "type": "string",
            "pattern": "^\\+?[0-9]{10,15}$"
        }
    }
}